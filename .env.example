# Webhook Agent Configuration

# Debug logging (set to 'true' for detailed logs)
DEBUG=false

# Comma-separated list of whitelisted origins
# Use * to allow all origins for testing
WHITELISTED_ORIGINS=*

# Rate limiting configuration
# Maximum requests per origin within the time window
RATE_LIMIT_MAX_REQUESTS=100
# Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000


# Playground API Integration
# Base URL for the playground API
PLAYGROUND_API_BASE=https://www.upwork.com/api/v3
# Authentication endpoint URL
PLAYGROUND_AUTH_URL=https://www.upwork.com/api/v3/oauth2/token
# API credentials (KEEP SECURE - add in Vercel dashboard)
PLAYGROUND_API_KEY=your-api-key-here
PLAYGROUND_API_SECRET=your-api-secret-here

# Optional: Add webhook secret for additional security
WEBHOOK_SECRET=your-webhook-secret-here